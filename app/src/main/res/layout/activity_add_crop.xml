<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:layout_margin="20dp"
    tools:context=".Screens.addCrop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="ADD CROP"
        android:textStyle="bold"
        android:textColor="@color/teal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:backgroundTint="@color/teal"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="8"
            android:backgroundTint="@color/aquamarine"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Crop Name: "
                android:textSize="15dp"
                android:gravity="center"
                android:textAllCaps="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:backgroundTint="@color/teal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quality: "
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/addUnits"
                    android:background="@drawable/customedit"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Price: "
                android:textSize="15dp"
                android:textAllCaps="true"
                android:gravity="center"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Add Crop Image: "
                android:textSize="15dp"
                android:gravity="center"
                android:textAllCaps="true"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6"
            android:backgroundTint="@color/blue_violet"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newCropName"
                android:padding="6dp"
                android:background="@drawable/customedit"
                android:layout_marginVertical="4dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addQuality"
                android:padding="6dp"
                android:background="@drawable/customedit"
                android:layout_marginVertical="4dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPrice"
                android:padding="6dp"
                android:background="@drawable/customedit"
                android:layout_marginVertical="4dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Image"
                android:layout_gravity="center_horizontal"
                android:id="@+id/addImage"
                android:backgroundTint="@color/dim_gray"

                />




        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/newCropImage"
        android:src="@drawable/img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Crop"
        android:id="@+id/addNewCropBtn"
        android:layout_marginTop="30dp"
        />


</LinearLayout>